{
  "type": "module",
  "scripts": {
    "build": "npm run build-component && npm run transpile && npm run bundle && npm run copy-files",
    "build-component": "cd component && cargo component build --release --target wasm32-unknown-unknown",
    "bundle": "esbuild --bundle --format=esm src/index.ts --outdir=dist",
    "copy-files": "cp index.html component-built/*.wasm dist",
    "clean": "rm -rf component/src/bindings.rs component/target component-built dist",
    "transpile": "jco transpile --no-nodejs-compat component/target/wasm32-unknown-unknown/release/component.wasm --out-dir component-built",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@bytecodealliance/jco": "^1.2.4",
    "esbuild": "^0.21.4",
    "typescript": "^5.4.5"
  }
}
